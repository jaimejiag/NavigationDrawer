<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_header_nav"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/header_nav">

    <!-- Imagen de perfil -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_profile"
        android:layout_width="@dimen/perfil_width_size"
        android:layout_height="@dimen/perfil_heigth_size"
        android:src="@drawable/unnamed"
        android:scaleType="centerCrop"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>

    <!-- Nombre de usuario -->
    <TextView
        android:id="@+id/txv_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txv_user"/>

    <!-- Correo de usuario -->
    <TextView
        android:id="@+id/txv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txv_email"/>
</LinearLayout>